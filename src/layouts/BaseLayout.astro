---
import '../styles/globals.css';
import HeadSEO from '../components/HeadSEO.astro';
import type { BreadcrumbItem, SEOProps } from '../utils/seo';

interface Props extends SEOProps {
	bodyClass?: string;
	lang?: string;
	breadcrumbs?: BreadcrumbItem[];
}

const {
	title,
	description,
	image,
	url,
	noindex,
	breadcrumbs,
	type,
	bodyClass = '',
	lang = 'en',
} = Astro.props as Props;

const seoProps = {
	title,
	description,
	image,
	url,
	noindex,
	breadcrumbs,
	type,
};

const faviconHref = '/assets/favicon.png?v=1';
---

<!DOCTYPE html>
<html lang={lang} class="scroll-smooth">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			rel="preload"
			as="style"
			href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500&family=Poppins:wght@600;700&display=swap"
		/>
		<link
			rel="stylesheet"
			href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500&family=Poppins:wght@600;700&display=swap"
			media="print"
			onload="this.media='all'"
		/>
		<noscript>
			<link
				rel="stylesheet"
				href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500&family=Poppins:wght@600;700&display=swap"
			/>
		</noscript>
		<link rel="icon" type="image/png" sizes="16x16" href={faviconHref} />
		<link rel="icon" type="image/png" sizes="32x32" href={faviconHref} />
		<link rel="icon" type="image/png" sizes="48x48" href={faviconHref} />
		<link rel="apple-touch-icon" sizes="180x180" href={faviconHref} />
		<link rel="shortcut icon" href={faviconHref} />
		<link rel="manifest" href="/site.webmanifest" />
		<HeadSEO {...seoProps} />
		<slot name="head" />
	</head>
	<body
		class:list={[
			'bg-brand-gray',
			'text-brand-dark',
			'selection:bg-brand-cyan/20',
			'selection:text-brand-dark',
			bodyClass,
		]}
	>
		<a
			class="sr-only focus:not-sr-only focus:absolute focus:top-3 focus:left-3 focus:z-50 focus:rounded-full focus:bg-brand-dark focus:px-4 focus:py-2 focus:text-white"
			href="#main-content"
		>
			Skip to content
		</a>
		<slot />
		<script type="module" is:inline>
			const mq = window.matchMedia('(prefers-reduced-motion: reduce)');
			const setReducedMotion = (event) => {
				document.documentElement.dataset.reducedMotion = event.matches ? 'true' : 'false';
			};
			setReducedMotion(mq);
			if (mq.addEventListener) {
				mq.addEventListener('change', setReducedMotion);
			} else if (mq.addListener) {
				mq.addListener(setReducedMotion);
			}

			const GA_ID = import.meta.env.PUBLIC_GA_ID || 'G-XXXXXXX';
			if (import.meta.env.PROD && GA_ID && GA_ID !== 'G-XXXXXXX') {
				window.dataLayer = window.dataLayer || [];
				function gtag() {
					window.dataLayer.push(arguments);
				}
				gtag('js', new Date());
				gtag('config', GA_ID);
				const script = document.createElement('script');
				script.async = true;
				script.src = `https://www.googletagmanager.com/gtag/js?id=${GA_ID}`;
				document.head.appendChild(script);
			} else {
				console.info('GA4 placeholder active. Set PUBLIC_GA_ID to enable analytics.');
			}
		</script>
	</body>
</html>
