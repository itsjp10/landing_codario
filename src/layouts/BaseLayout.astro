---
import '../styles/globals.css';

interface Props {
	title?: string;
	description?: string;
	ogImage?: string;
	pageType?: string;
	bodyClass?: string;
	lang?: string;
}

const {
	title = 'Codario Labs â€” Web that launches and scales',
	description,
	ogImage,
	pageType = 'website',
	bodyClass = '',
	lang = 'en',
} = Astro.props as Props;

const canonical =
	Astro.site && Astro.url
		? new URL(Astro.url.pathname, Astro.site).toString()
		: Astro.url?.href ?? '';
---

<!DOCTYPE html>
<html lang={lang} class="scroll-smooth">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<title>{title}</title>
		{description && <meta name="description" content={description} />}
		<meta name="theme-color" content="#0A2540" />
		<meta property="og:title" content={title} />
		{description && <meta property="og:description" content={description} />}
		<meta property="og:type" content={pageType} />
		{canonical && <meta property="og:url" content={canonical} />}
		<meta property="og:site_name" content="Codario Labs" />
		{ogImage && <meta property="og:image" content={ogImage} />}
		{ogImage && <meta property="og:image:alt" content="Codario Labs branding preview" />}
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		{description && <meta name="twitter:description" content={description} />}
		{ogImage && <meta name="twitter:image" content={ogImage} />}
		{canonical && <link rel="canonical" href={canonical} />}
		<link rel="icon" type="image/svg+xml" href="/assets/logo-codario.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			rel="preload"
			as="style"
			href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500&family=Poppins:wght@600;700&display=swap"
		/>
		<link
			rel="stylesheet"
			href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500&family=Poppins:wght@600;700&display=swap"
			media="print"
			onload="this.media='all'"
		/>
		<noscript>
			<link
				rel="stylesheet"
				href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500&family=Poppins:wght@600;700&display=swap"
			/>
		</noscript>
		<slot name="head" />
	</head>
	<body
		class:list={[
			'bg-brand-gray',
			'text-brand-dark',
			'selection:bg-brand-cyan/20',
			'selection:text-brand-dark',
			bodyClass,
		]}
	>
		<a
			class="sr-only focus:not-sr-only focus:absolute focus:top-3 focus:left-3 focus:z-50 focus:rounded-full focus:bg-brand-dark focus:px-4 focus:py-2 focus:text-white"
			href="#main-content"
		>
			Skip to content
		</a>
		<slot />
		<script type="module" is:inline>
			const mq = window.matchMedia('(prefers-reduced-motion: reduce)');
			const setReducedMotion = (event) => {
				document.documentElement.dataset.reducedMotion = event.matches ? 'true' : 'false';
			};
			setReducedMotion(mq);
			if (mq.addEventListener) {
				mq.addEventListener('change', setReducedMotion);
			} else if (mq.addListener) {
				mq.addListener(setReducedMotion);
			}

			const GA_ID = import.meta.env.PUBLIC_GA_ID || 'G-XXXXXXX';
			if (import.meta.env.PROD && GA_ID && GA_ID !== 'G-XXXXXXX') {
				window.dataLayer = window.dataLayer || [];
				function gtag() {
					window.dataLayer.push(arguments);
				}
				gtag('js', new Date());
				gtag('config', GA_ID);
				const script = document.createElement('script');
				script.async = true;
				script.src = `https://www.googletagmanager.com/gtag/js?id=${GA_ID}`;
				document.head.appendChild(script);
			} else {
				console.info('GA4 placeholder active. Set PUBLIC_GA_ID to enable analytics.');
			}
		</script>
	</body>
</html>
