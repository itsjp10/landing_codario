---
interface FeatureItem {
	title: string;
	tagline: string;
	description: string;
	icon: {
		path: string;
		viewBox?: string;
	};
}

const features: FeatureItem[] = [
	{
		title: 'Fast Launch',
		tagline: 'Ship in days, not months.',
		description:
			'Sprint-based roadmaps, reusable design systems, and automated QA help us push production-ready experiences in record time.',
		icon: {
			path: 'm4.5 16.5 5-5a10 10 0 0 1 10-10l-1.5 5.5 4 4a10 10 0 0 1-10 10Z M9.5 11.5 14 16',
		},
	},
	{
		title: 'Conversion-First',
		tagline: 'Landing pages optimized for results.',
		description:
			'Every hero, CTA, and flow is backed by research, A/B testing, and narrative frameworks tuned for activation and retention.',
		icon: {
			path: 'M3 3v7a2 2 0 0 0 2 2h4l4 4V5a2 2 0 0 0-2-2H5a2 2 0 0 0-2 2Z M17 8h4v8a2 2 0 0 1-2 2h-4l-4 4v-6',
		},
	},
	{
		title: 'Scalable Systems',
		tagline: 'From dashboards to CRMs.',
		description:
			'We architect modular web apps, internal tools, and APIs with CI pipelines so your ops stay reliable as you grow.',
		icon: {
			path: 'M5 7h14M5 12h14M5 17h14 M8 7v10M12 7v10M16 7v10',
		},
	},
	{
		title: 'Clean Code & CI/CD',
		tagline: 'Vercel, tests, and best practices.',
		description:
			'Type-safe stacks, automated tests, preview deploys, and observability ensure every release meets quality and reliability standards.',
		icon: {
			path: 'M7 21 12 3l5 18M9.5 14h5',
		},
	},
];
---

<section aria-labelledby="features-heading" class="bg-brand-gray/30 py-24 sm:py-28">
	<div class="container">
		<header class="mx-auto max-w-2xl text-center">
			<p class="text-sm font-semibold uppercase tracking-[0.38em] text-brand-dark/55">Capabilities</p>
			<h2 id="features-heading" class="section-title mt-4">
				Everything you need to launch, optimize, and grow.
			</h2>
			<p class="mt-4 text-base text-brand-dark/70 sm:text-lg">
				Product strategy, UX, and full-stack engineering come together so your next release ships fasterâ€”and keeps improving after launch.
			</p>
		</header>

		<div class="mt-16 grid gap-6 sm:grid-cols-2 xl:grid-cols-4">
			{features.map(({ title, tagline, description, icon }) => (
				<article class="feature-card group relative overflow-hidden rounded-3xl border border-brand-dark/8 bg-white/90 p-8 shadow-sm transition duration-300 ease-out">
					<div class="relative z-10 space-y-4">
						<span class="inline-flex h-12 w-12 items-center justify-center rounded-2xl bg-brand-cyan/10 text-brand-cyan transition-all duration-300 ease-out group-hover:bg-brand-cyan/15 group-hover:text-brand-dark">
							<svg
								class="h-6 w-6"
								viewBox={icon.viewBox ?? '0 0 24 24'}
								fill="none"
								stroke="currentColor"
								stroke-width="1.8"
								stroke-linecap="round"
								stroke-linejoin="round"
								aria-hidden="true"
							>
								<path d={icon.path} />
							</svg>
						</span>
						<h3 class="font-heading text-xl font-semibold text-brand-dark">
							{title}
						</h3>
						<p class="text-sm font-medium uppercase tracking-[0.32em] text-brand-dark/55">
							{tagline}
						</p>
						<p class="text-sm leading-relaxed text-brand-dark/75">
							{description}
						</p>
					</div>
					<div class="pointer-events-none absolute inset-0 rounded-3xl bg-gradient-to-br from-brand-cyan/0 via-brand-cyan/0 to-brand-lime/0 opacity-0 transition duration-300 ease-out group-hover:opacity-60"></div>
				</article>
			))}
		</div>
	</div>
</section>

<style>
	.feature-card {
		transform: translateY(0) rotate(0deg);
	}

	.feature-card:hover,
	.feature-card:focus-within {
		transform: translateY(-10px) rotate(-0.6deg);
		box-shadow: 0 28px 46px -24px rgba(10, 37, 64, 0.3);
	}

	.feature-card:nth-child(2n):hover,
	.feature-card:nth-child(2n):focus-within {
		transform: translateY(-10px) rotate(0.6deg);
	}

	@media (prefers-reduced-motion: reduce) {
		.feature-card,
		.feature-card:hover,
		.feature-card:focus-within {
			transform: none;
			transition-duration: 0ms;
		}
	}
</style>
